{

    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "strict": true,
        "moduleResolution": "Node",
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitThis": false,
        "noUnusedLocals": true,
        "module": "CommonJS",
        "target": "es2020",
        "sourceMap": true
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts"
    ],
    "exclude": ["node_modules", "**/*.test.ts"]
}
